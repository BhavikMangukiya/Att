<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="10.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/checkcheck"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/quescheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Question"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/anscheck"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@android:color/white"
                android:hint="Type the right answer"
                android:inputType="textPersonName"
                android:padding="8.0dip" />

            <TextView
                android:id="@+id/getpasscheck"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/buttongreen"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="Get Pin"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkshow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Your Pin is"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showpasscheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="Question"
                android:textColor="@android:color/black"
                android:textSize="25.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dismisspasscheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:background="#ff1bb157"
                android:gravity="center"
                android:paddingBottom="8.0dip"
                android:paddingLeft="40.0dip"
                android:paddingRight="40.0dip"
                android:paddingTop="8.0dip"
                android:text="Got It"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>