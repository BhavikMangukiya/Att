<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/signupsplash"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:text="Security Setup"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/showpass"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/pass1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30.0dip"
                    android:layout_marginRight="30.0dip"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif"
                    android:hint="Enter Pin"
                    android:inputType="numberPassword"
                    android:maxLength="5"
                    android:padding="7.0dip" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/showpass"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/pass2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30.0dip"
                    android:layout_marginRight="30.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif"
                    android:hint="Confirm Pin"
                    android:inputType="numberPassword"
                    android:maxLength="5"
                    android:padding="7.0dip" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:text="Security Question"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@android:color/white"
                android:entries="@array/security_questions"
                android:gravity="center_horizontal"
                android:padding="7.0dip" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/showpass"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/passsec"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30.0dip"
                    android:layout_marginRight="30.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif"
                    android:hint="Enter your answer"
                    android:inputType="textPassword"
                    android:padding="7.0dip" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkterms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="I Agree to "
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="'Terms &amp; Conditions'"
                    android:textColor="#ffcacbd7"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@color/buttongreen"
                android:gravity="center"
                android:padding="7.0dip"
                android:text="DONE"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/signinsplash"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1.0dip"
                android:gravity="center"
                android:text="SECURITY"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/showpass"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/enterpin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="50.0dip"
                    android:layout_marginRight="50.0dip"
                    android:alpha="1.0"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif"
                    android:hint="Enter Pin"
                    android:inputType="numberPassword"
                    android:maxLength="5"
                    android:padding="8.0dip" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/signin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50.0dip"
                android:layout_marginRight="50.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/buttongreen"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="7.0dip"
                android:text="GET IN"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25.0dip"
                android:layout_marginLeft="50.0dip"
                android:layout_marginRight="50.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@color/buttongreen"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="8.0dip"
                android:text="Forgot Pin?"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/nosecuresplash"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="BMEF Register"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="A product by PARADOX"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logoheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/enterappnosecure"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="Welcome Back!"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snackbarholder1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>